<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>


<body class="w-full h-full bg-zinc-900">
    <div class="p-10">
        <div>
            <a href="/" class="text-blue-500">Back to home!</a>
        </div>
        <h1 class="text-white font-bold text-2xl">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <% if(users.length > 0) { %>
                <% users.forEach(function(user){ %>
                <div class="max-w-72 p-4 bg-zinc-800">
                    <div class="w-full h-52 bg-zinc-700 rounded-lg">
                        <img class="w-full h-52 object-cover" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="mt-3 text-xl text-white"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3">
                        <a href="/edit/<%= user._id %>" class="text-zinc-200">Edit user</a>
                        <a href="/delete/<%= user._id %>" class="text-red-500">Delete user</a>
                    </div>
                </div>
            <% }) %>

            <% } else{ %>
                <h3 class="text-zinc-500">no user yet!</h3>
            <% } %>
            

        </div>
    </div>
</body>

</html>